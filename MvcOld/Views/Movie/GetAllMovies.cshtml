@model IEnumerable<MvcOld.Models.Movie>

@{
    ViewBag.Title = "GetAllMovies";
}

<h2>GetAllMovies</h2>

<p>
    @Html.ActionLink("Create New", "AddNewMovie")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ratings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
